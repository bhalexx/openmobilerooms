<nav aria-label="Page navigation example">
	<ul class="pagination justify-content-center">
		{% for i in 1..meta.total_pages %}
			<li class="page-item {% if i == app.request.attributes.get('_route_params')['page'] %}active{% endif %}">
				{% if pageName == "search" %}
					{% set manufacturer = app.request.attributes.get('_route_params')['manufacturer'] %}
					<a class="page-link" href="{{ path('search', { manufacturer: manufacturer, page: i }) }}">{{ i }}</a>
				{% else %}
					<a class="page-link" href="{{ path('mobiles', { page: i }) }}">{{ i }}</a>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
</nav>